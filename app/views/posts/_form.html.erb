<%= form_for(@post) do |f| %>
  <% if @post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
      <% @post.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :tittle %><br>
    <%= f.text_field :tittle, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :file %><br>
    <%= f.file_field :file, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :price %><br>
    <%= f.number_field :price, class: "form-control", step: "any" %>
  </div>
  <div class="form-group">
    <%= f.label :contenido %><br>
    <%= f.text_area :contenido, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.submit "Subir post", class: "btn btn-info" %>
  </div>
<% end %>
